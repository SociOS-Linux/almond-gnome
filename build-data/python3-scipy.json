{
    "name": "python3-scipy",
    "buildsystem": "simple",
    "build-commands": [
        "pip3 install --no-index --no-build-isolation --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} pybind11",
        "pip3 install --no-index --no-build-isolation --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} scipy"
